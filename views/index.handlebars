<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="https://www.denverpost.com/entertainment/movies/">Sports By The Denver Post</a>
    </div>
    <ul class="nav navbar-nav navbar-right top-buttons">
        <li><button class="btn btn-dark scrape">Scrape Articles</button></li>
        <li><button class="btn btn-dark saved">Saved Articles</button></li>
    </ul>
  </div>
</nav>

<div class="articles">
    <div class="load"></div>
    {{#each_upto articles 10}}
        {{#unless saved}}
        <div class="article">
            <img src="{{image}}" style="height:100px;">
            <a href="{{link}}"><h2>{{title}}</h2></a>
            <p>{{summary}}</p>
            <button class="btn btn-dark save" data-id="{{_id}}">SAVE</button>
            <br>
        </div>
        {{/unless}}
    {{/each_upto}}
</div>
